<!DOCTYPE html>
<html>

<head>
</head>

<body>
    <h2>Add Lecturer</h2>

    <!-- Display error messages for each error -->
    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
            <% }) %>
        </ul>
    <% } %>

    <!-- Seperate display for duplication error -->
    <% if (dupe !="" ) { %>
        <ul>
            <li>
                <%= dupe %>
            </li>
        </ul>
    <% } %>

    <!-- Create a form to add a lecturer -->
    <form action="/addLecturer" method="post">
        <label>Lecturer ID:</label><br>
        <input type="text" name="_id" value="<%= _id %>"><br>
        <label>Name:</label><br>
        <input type="text" name="name" value="<%= name %>"><br>
        <label>Dept:</label><br>
        <input type="text" name="dept" value="<%= dept %>"><br><br>
        <input type="submit" value="Add"><br><br><br>
    </form>

    <!-- Home link -->
    <br><a href="http://localhost:3000/">Home</a>

</html>